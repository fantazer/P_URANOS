//! block adv
.adv-wraper 
	+below(768px)
		padding 40px 0
	padding 120px 0
	bgi('bg.png')
	background-size cover
	background-position center
	background-repeat no-repeat
	.main-cont 
		flex(between)
		fl()
		fw()
//.adv-title 
//.adv-title-sub 
.adv-title 
	+below(768px)
		font-size 7vw
	text-align center
	color white
	font-size 60px
	font-weight 100 
.adv-title-sub 
	+below(768px)
		font-size 4vw
		margin-bottom 30px
	text-align center
	color white
	font-size 36px
	font-weight 700
	margin-bottom 90px
.adv 
	+below(768px)
		fw()
		margin-bottom 20px
	flex(between)
	margin-bottom 80px
	width 100%
.adv__el 
	+below(960px)
		width 48%
		margin-bottom 20px
	+below(768px)
		width 100%
	flex(between)
	fl()
	fw()
	width 22%
	padding 0 20px
.adv__el-icon 
	+below(768px)
		margin-bottom 10px
	margin-bottom 30px
	.icons 
		+below(768px)
			size 40
		fill yellow
		size 100
.adv__el-title
	+below(960px)
		font-size 14px
		margin-bottom 10px
	color white
	font-size 30px
	font-weight 700
	margin-bottom 20px
.adv__el-text 
	+below(768px)
		color white
	font-size 14px
	font-weight 300
	line-height 22px
	color rgba(255, 255, 255, 0.6);
	text-align center
	width 100%
.adv-btn 
	@extend .btn
	@extend .btn--yellow
	border 0px
	br(3px)
	up()
	+below(768px)
		width 100%
		padding 10px 15px
		text-align center
		margin-top 10px
//!block adv end